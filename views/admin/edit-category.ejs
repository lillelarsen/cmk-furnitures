<% include ./partials/head.ejs %>
<% include ./partials/header.ejs %>
<% include ./partials/navigation.ejs %>
<main class="main">
        <h1 class="main-title"><%= title %></h1>
    <form method="post" class="create-category">
        <fieldset>
            <label for="name">Navn</label>
            <input type="text" name="name" id="name" value="<%= category.name %>">
            <span id="nameError" style="color: red;">
                <%= (messages && messages.nameError) ? messages.nameError : "" %>
            </span>
        </fieldset>
        <fieldset>
            <label for="description">description</label>
            <textarea name="description" id="description"><%= category.description %></textarea>
            <span id="descriptionError" style="color: red;">
                <%= (messages && messages.descriptionError) ? messages.descriptionError : "" %>
            </span>
        </fieldset>
        <button type="submit">Gem</button>
    </form>
</main>
<script src="/scripts/validator.js"></script>
<script>
    jsb.validationEmpty('.create-category', '#name', 'Udfyld venligst titel!', '#nameError');
    jsb.validationEmpty('.create-category', '#description', 'Udfyld venligst beskrivelse!', '#descriptionError');
</script>
