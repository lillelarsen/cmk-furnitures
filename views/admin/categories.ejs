<% include ./partials/head.ejs %>
<% include ./partials/header.ejs %>
<% include ./partials/navigation.ejs %>
<main class="main">
        <h1 class="main-title"><%= title %></h1>
    <table>
        <thead>
            <tr>
                <th><a href="/admin/createCategory" class="btn">Ny møbelserie</a></th>
                <th>Navn</th>
                <th>Beskrivelse</th>
            </tr>
        </thead>
        <tbody>
            <% if(categories == 0) { %>
                <p>Der er ingen møbelserie at vise</p>
            <tr>
                <td>
                    <a href="">Rediger</a>
                    <a href="">Slet</a>
                </td>
                <td>-------</td>
                <td>-------</td>
            </tr>
            <% } %>
            <% categories.forEach(category => { %>
            <tr>
                <td>
                    <a href="/admin/editCategory/<%= category.id %>">Rediger</a>
                    <a href="/admin/deleteCategory/<%= category.id %>">Slet</a>
                </td>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</main>
<% include ./partials/footer.ejs %>
<% include ./partials/after-footer.ejs %>

