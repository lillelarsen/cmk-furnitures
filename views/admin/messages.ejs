<% include ./partials/head.ejs %>
<% include ./partials/header.ejs %>
<% include ./partials/navigation.ejs %>
<main class="main">
        <h1 class="main-title"><%= title %></h1>
    <% include ./partials/pagination.ejs %>
    <table>
        <thead>
            <tr>
                <th>Slet</th>
                <th>Navn</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% if(messages.length == 0) { %>
                <p>Der er ingen beskeder at vise</p>
            <tr>
                <td>
                    <a href="">Læs</a>
                    <a href="">Slet</a>
                </td>
                <td>-------</td>
                <td>-------</td>
            </tr>
            <% } %>
            <% messages.forEach(message => { %>
            <tr>
                <td>
                    <a href="/admin/readMessage/<%= message.id %>">Læs</a>
                    <a href="/admin/deleteMessage/<%= message.id %>">Slet</a>
                </td>
                <td><%= message.name %></td>
                <td><%= message.email %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <% include ./partials/pagination.ejs %>
</main>
<% include ./partials/footer.ejs %>
<% include ./partials/after-footer.ejs %>